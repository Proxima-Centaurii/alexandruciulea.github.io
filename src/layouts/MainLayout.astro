---
import { Image, getImage } from 'astro:assets';
import avatar_img from '../assets/images/avatar.jpg';
import background_img from '../assets/images/bg.jpg';
import Footer from '../components/Footer.astro';

const optimisedBackground = await getImage({src: background_img, format: 'webp', quality: 'low'});

const {pageTitle} = Astro.props;
---

<html>
    <head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>

    <body>
        <!--Side header -->
		<header id="header" style={`background-image: url(${optimisedBackground.src});`}>
			<div class="flex cursor-pointer gap-2 absolute top-1 left-1">
				<svg class="fill-yellow-400" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"/><path d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4"/></svg>
				<input type="checkbox" value="luxury" class="toggle theme-controller"/>
				<svg class="fill-zinc-200" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path></svg>
			</div>


			<div class="grow w-full sh540:zoom-60 sh700:zoom-80 zoom-100">
				<div class="avatar size-fit">
					<div class="w-24 sm:w-32 lg:w-36 rounded-full">
						<Image src={avatar_img} alt="About me" loading='eager'/>
					</div>
				</div>
				<div class="prose py-8 w-full max-w-none">
					<h1 class="text-primary m-2 text-sm sm:text-4xl lg:text-lg xl:text-3xl text-drop-shadow-2">Vasile-Alexandru Ciulea</h1>
					<p class="text-info font-bold m-2 text-sm sm:text-xl lg:text-sm xl:text-xl text-drop-shadow-2">Mathematics and Computer Science graduate</p>
					<!-- <p class="invisible 2xl:visible font-bold text-info">2XL</p>
					<p class="invisible xl:visible font-bold text-info">XL</p>
					<p class="invisible lg:visible font-bold text-info">Large</p>
					<p class="invisible md:visible font-bold text-info">Medium</p>
					<p class="invisible sm:visible font-bold text-info">Small</p> -->
				</div>
				<div class="grid grid-flow-row gap-4">
					<button class="btn btn-neutral btn" onclick="navTo('about_me')">About me</button>
					<button class="btn btn-neutral btn" onclick="navTo('education')">Education</button>
					<button class="btn btn-neutral btn" onclick="navTo('technical_knowledge')">Technical knowledge</a>
					<button class="btn btn-neutral btn" onclick="navTo('projects')">Projects</a>
				</div>

				<div class="invisible lg:visible">
					<Footer />
				</div>
			</div>
			
		</header>

        <!-- Page content sections -->
        <div class="main-content">
            <slot />

			
        </div>

		<div class="w-full lg:invisible h-16 bottom-page-footer" style={`background-image: url(${optimisedBackground.src});`}>
			<Footer />
		</div>

		<script type="text/javascript" src="scroll_to_view.js"></script>
		<script src="../assets/scripts/parallax_background.js"></script>
		
    </body>
</html>

